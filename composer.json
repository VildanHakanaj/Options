{
    "name": "vildanhakanaj/php-options",
    "description": "Simple way to interact with an options array in your website",
    "authors": [
        {
            "name": "Vildan Hakanaj",
            "email": "vildanhakanaj@gmail.com"
        }
    ],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "VildanHakanaj\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VildanHakanaj\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2",
        "ext-json": "*"
    },
    "minimum-stability": "dev",
    "require-dev": {
        "pestphp/pest": "3.x-dev"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
